@using FitnessApp.Models
<!-- DataTales Example -->
@model List<Position>
@{
    int count = 0;
}
<div class="card shadow mb-4">
   
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Positions</h6>
        

    </div>

   

    <div class="card-body">
        <div style="margin-bottom:20px"> <a asp-controller="Position" asp-action="Create" class="btn btn-primary">Create</a></div>
      
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Actions</th>
                       
                    </tr>
                </thead>
              
                <tbody>
                    
                    @foreach(Position position in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@position.Name</td>
                            <td>
                                <a asp-area="Admin" asp-controller="Position" asp-action="Update" asp-route-id="@position.Id" class="btn btn-primary">Update</a>
                                <a asp-area="Admin" asp-controller="Position" asp-action="Delete" asp-route-id="@position.Id" class="btn btn-danger">Delete</a>

                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

</div>
<!-- /.container-fluid -->
</div>
<!-- End of Main Content -->