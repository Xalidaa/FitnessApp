@using FitnessApp.Areas.Admin.ViewModels.Trainer
@model CreateTrainerVM

<div style="padding:10px 20px 400px">
    <h4 class="card-title">Add Trainer</h4>
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" class="form-control" placeholder="Description">
            <span asp-validation-for="Description"></span>
        </div>
        <div class="form-group" >
            <label asp-for="Photo">Image</label>
            <input asp-for="Photo" class="form-control">
            <span asp-validation-for="Photo"></span>
        </div>
        <div class="form-group">
            <label asp-for="PositionId">Name</label>
            <select class="form-control" asp-for="PositionId" asp-items="@(new SelectList(Model.Positions,"Id","Name"))">
                <option>Select Position</option>
            </select>
            <span asp-validation-for="PositionId"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
        <button asp-controller="Trainer" asp-action="Index" class="btn btn-primary">Cancel</button>
    </form>
</div>
